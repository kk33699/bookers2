<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/ca5b9dbee1.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <header>
    <% if user_signed_in? %>
      <!-- ログイン中のベッター-->
        <li>
          <%= link_to "Bookers", homes_top_path %>
        </li>
        <li>
          <%= link_to "<i class='fa-sharp fa-solid fa-house'></i> Home".html_safe, homes_top_path %>
        </li>
        <li>
          <%= link_to "<i class='fa-solid fa-users'></i> Users".html_safe, users_path %>
        </li>
        <li>
          <%= link_to "<i class='fa-solid fa-book-open'></i> Books".html_safe, books_path %>
        </li>
        <li>
          <%= link_to "<i class='fa-solid fa-right-from-bracket'></i> Log out".html_safe, destroy_user_session_path, method: :delete %>
        </li>
    <% else %>
      <!-- ログイン前のベッター-->
      <li>
        <%= link_to "Bookers", homes_top_path %>
      </li>

      <li>
      <%= link_to "<i class='fa-sharp fa-solid fa-house'></i> Home".html_safe, homes_top_path %>
      </li>

      <li>
      <%= link_to "<i class='fa-solid fa-link'></i> About".html_safe, homes_about_path %>
      </li>
      <li>
        <%= link_to "<i class='fa-solid fa-user-plus'></i> Sign up".html_safe, new_user_registration_path %>
      </li>
      <li>
        <%= link_to "<i class='fa-solid fa-right-to-bracket'></i> Log in".html_safe, new_user_session_path %>
      </li>

    <% end %>
  </header>

  <!-- フラッシュメッセージ-->
  <div class="container">
    <% if notice %>
      <div class="alert alert-success">
        <%= notice %>
      </div>
    <% end %>
    
    <% if alert %>
      <div class="alert alert-danger">
        <%= alert %>
      </div>
    <% end %>
  </div>

  <%= yield %>

  <footer>
  <div class="col-md-4 mx-auto mt-5">
    <p>CopyRight Infratop.inc</p>
  </footer>
  </body>
</html>

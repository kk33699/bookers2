<div class="container">
  <div class="row">
    <%= render 'list', user: @user %>
  </div>

  <!-- 右上: Books -->
  <h1>Books</h1>
  <table class="table">
    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td>
            <% if book.user&.image.present? %>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.image, class: "img-thumbnail", size: "100x100" %>
              <% end %>
            <% else %>
              <%= link_to user_path(book.user) do %>
                <%= image_tag book.user.get_profile_image(100, 100), class: "img-thumbnail", size: "100x100" %>
              <% end %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book) %></td>
          <td><%= book.body %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>


<%= form_with model: @user, local: true do |f| %>
  <% if @user.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @user.errors.count %> errors prohibited this user from being saved:</strong>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <h1>User info</h1>
  <h4>Name</h4>
  <%= f.text_field :name, class: "form-control custom-width", value: @user.name %>

  <h4>Introduction</h4>
  <%= f.text_area :introduction, class: "form-control custom-width", value: @user.introduction %>

  <h4>Image</h4>
  <%= f.label :image, "Upload Image" %><br>
  <%= f.file_field :image %>
  <% if @user.image.present? %>
    <p>Current image:</p>
  <%= image_tag @user.image, class: "img-fluid" %>
  <% end %>

  <%= f.submit 'Update User', class: "btn btn-primary" %>
<% end %>


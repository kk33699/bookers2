<!-- 左上: User info-->
<div class="col-md-3">
  <h1>User info</h1>
  <% if user&.image.present? %>
    <%= image_tag user.image, class: "img-fluid" %>
  <% else %>
    <div class="no-image-placeholder">
      <p>NO IMAGE</p>
    </div>
  <% end %>
  <table class="table">
    <tr>
      <th>name</th>
      <td><%= user&.name || 'N/A' %></td>
    </tr>
    <tr>
      <th>introduction</th>
      <td><%= user&.introduction || '' %></td>
    </tr>
  </table>

  <% if current_user == user %>
    <%= link_to "<i class='fa-solid fa-user-gear'></i> プロフィール編集".html_safe, edit_user_path(user), class: "btn btn-secondary" %>
  <% end %>
</div>

<!-- 左下: New book -->
<div class="col-md-3">
  <h1>New book</h1>
  <% if @book.errors.any? %>
    <div class="alert alert-danger">
      <strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= form_with model: @book, local: true do |f| %>
    <div class="mb-2">
      <h4>Title</h4>
      <%= f.text_field :title, class: "form-control" %>
    </div>
    <div class="mb-2">
      <h4>Opinion</h4>
      <%= f.text_area :body, class: "form-control" %>
    </div>
    <%= f.submit 'Create Book', class: "btn btn-success" %>
  <% end %>
</div>

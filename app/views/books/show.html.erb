<h1>memo books/show.html.erb</h1>

<div class="container">
  <div class="row">
    <!-- 左上: User info -->
    <div class="col-md-3">
      <h1>User info</h1>
      <% if @user&.image.present? %>
        <%= image_tag @user.image, class: "img-fluid" %>
      <% else %>
        <div class="no-image-placeholder">
          <p>NO IMAGE</p>
        </div>
      <% end %>
      <table class="table">
        <tr>
          <th>name</th>
          <td><%= @user&.name || 'N/A' %></td>
        </tr>
        <tr>
          <th>introduction</th>
          <td><%= @user&.introduction || 'N/A' %></td>
        </tr>
      </table>
      <%= link_to 'プロフィール編集', edit_user_path(@user) if @user %>
    </div>

    <!-- 右上: Books -->
    <div class="col-md-8">
      <h1>Book detail</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.user&.image.present? %>
                    <%= image_tag book.user.image, class: "img-thumbnail", size: "100x100" %>
                  <% else %>
                    <div class="no-image-placeholder">
                      <p>NO IMAGE</p>
                    </div>
                  <% end %>
                </td>
                <td><%= book.title %></td>
                <td><%= book.body %></td>
                <td>
                  <%= link_to 'Edit', edit_book_path(book) %>
                  <%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: 'Are you sure?' } %>
                </td>
              </tr>
            <% end %>
          <% else %>
            <tr>
              <td colspan="3">No books available.</td>
            </tr>
          <% end %>
        </tbody>      
      </table>
    </div>
  </div>

  <div class="row mt-1">
    <!-- 左下: New book -->
    <div class="col-md-3">
      <h1>New book</h1>
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-2">
          <h4>Title</h4>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-2">
          <h4>Opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>

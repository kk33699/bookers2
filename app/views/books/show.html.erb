<div class="container">
  <%= render 'books/list', user: @user, book: @book %>

  <!-- 右上: Book detail -->
  <div class="col-md-8">
    <h1>Book detail</h1>
    <table class="table">
      <thead>
        <tr>
          <th></th>
          <th>Title</th>
          <th>Opinion</th>
        </tr>
      </thead>
      <tbody>
        <% if @book.present? %>
          <tr>
            <td>
              <% if @book.user&.image.present? %>
                <%= image_tag @book.user.image, class: "img-thumbnail", size: "100x100" %>
              <% else %>
                <div class="no-image-placeholder">
                  <p>NO IMAGE</p>
                </div>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <td>
              <%= link_to 'Edit', edit_book_path(@book) %>
              <%= link_to 'Destroy', book_path(@book), method: :delete, data: { confirm: 'Are you sure?' } %>
        <!-- Backは仮で作成 後日削除する -->
              <%= link_to 'Back', books_path %>

            </td>
          </tr>
        <% else %>
          <tr>
            <td colspan="3">No book details available.</td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<div class="container">
  <div class="row">
    <!-- 左上 -->
    <div class="col-md-3">
      <h1>User info</h1>
    </div>

    <!-- 右上 -->
    <div class="col-md-8">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>

  <div class="row mt-1">


    <!-- 左下 -->
    <div class="col-md-3">
      <h1>New book</h1>
      <% if @book.errors.any? %>
        <div class="alert alert-danger">
          <strong><%= @book.errors.count %> errors prohibited this book from being saved:</strong>
          <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <%= form_with model: @book, local: true do |f| %>
        <div class="mb-2">
          <h4>Title</h4>
          <%= f.text_field :title, class: "form-control" %>
        </div>
        <div class="mb-2">
          <h4>Opinion</h4>
          <%= f.text_area :body, class: "form-control" %>
        </div>
        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>
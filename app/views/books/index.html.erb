<div class="container">
  <div class="row">
    <!-- 左側:User infoとNew book -->
    <div class="col-md-3">
      <%= render 'books/list', user: @user, book: @book %>
    </div>

    <!-- 右上: Books -->
    <div class="col-md-8 offset-md-1">
      <h1>Books</h1>
      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% if @books.present? %>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <% if book.user.image.present? %>
                    <%= link_to user_path(book.user) do %>
                      <%= image_tag book.user.image, class: "img-thumbnail", size: "100x100" %>
                    <% end %>
                  <% else %>
                    <div class="no-image-placeholder">
                      <%= link_to user_path(book.user) do %>
                        <%= image_tag book.user.get_profile_image(100, 100) %>
                      <% end %>

                    </div>
                  <% end %>
                </td>
                <td><%= link_to book.title, book_path(book) %></td>
                <td><%= book.body %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>



